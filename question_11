package Assignment_5;

public class question11 {

	public static void main(String[] args) {
/*Print the following output using nested for loops.

4  3  2  1

  3  2  1

   2  1

    1
*/
		
		int rows=4;
		for(int i =rows; i>=1; i--) {
			for(int j=rows; j>i; j--) 
				System.out.print(" ");
			for(int z=i; z>=1; z--) {
				System.out.print(+z+" ");
			}
			System.out.println();
		}

		
		
		
	
		
		
		
		
	}

}
